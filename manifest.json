{
  "manifest_version": 3,
  "name": "Fallen London Fast Travel",
  "version": "1.0.0",
  "description": "Unlocks the travel button while in a storylet in Fallen Lodon, travel without having to click the 'Perhaps Not' button.",
  "content_scripts": [
    {
      "matches": [
        "https://www.fallenlondon.com/*"
      ],
      "js": [
        "fasttravelFunctional.js"
      ],
      "css":[
        "cssinject.css"
      ]
      
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "web_accessible_resources": [
    {
      "resources": ["cssinject.css"],
      "matches": [ "https://www.fallenlondon.com/*" ]
    }
    
]
}